@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome";

/*
 * Globals
 */

/* Links */
a.home,
a.home:focus,
a.home:hover {
    color: #fff;
    cursor: pointer;
}

/* Custom default button */
.btn{
  border-radius: 0px;
}

.btn-default,
.btn-default:hover,
.btn-default:focus {
    color: #333;
    text-shadow: none;
 /* Prevent inheritence from `body` */
    background-color: #fff;
    border: 1px solid #fff;
}

.modal-content{
  border-radius: 0px;
}


/*
 * Base structure
 */

html,
body {
    height: 100%;
    font-family: 'Raleway', sans-serif;
}

.normal{
  color: black;
}

.form-control{
  border-radius: 0;
}

.input-group{
  margin-bottom: 10px;
}

/* Extra markup and styles for table-esque vertical and horizontal centering */

.main-content{
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.site-wrapper {
    color: #fff;
    text-align: center;
    /*text-shadow: 0 1px 3px rgba(0,0,0,.5);*/
    display: table;
    width: 100%;
    height: 100%;
    background: url(image_path('beers.gif')) no-repeat;
    background-size: cover;
 /* For at least Firefox */
    min-height: 100%;
    -webkit-box-shadow: inset 0 0 100px rgba(0,0,0,.5);
    box-shadow: inset 0 0 100px rgba(0,0,0,.5);
}


.site-wrapper-inner {
    display: table-cell;
    vertical-align: top;
}

.cover-container {
    margin-right: auto;
    margin-left: auto;
}

/* Padding for spacing */
.inner {
    padding: 30px;
}

.glyphicon-heart{
  color: #FA5858;
}

.fa-beer{
  color: #DF7401;
}

/*
 * Header
 */

header{
  background-color: #0080FF;
  a{
    color: #fff;
    cursor: pointer;
  }
}


.masthead-brand {
    margin-top: 10px;
    margin-bottom: 10px;
}

.masthead-nav > li {
    display: inline-block;
}

.masthead-nav > li + li {
    margin-left: 20px;
}

.masthead-nav > li > a {
    padding-right: 0;
    padding-left: 0;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
 /* IE8 proofing */
    color: rgba(255,255,255,.75);
    border-bottom: 2px solid transparent;
}

.masthead-nav > li > a:hover,
.masthead-nav > li > a:focus {
    background-color: transparent;
    border-bottom-color: #a9a9a9;
    border-bottom-color: rgba(255,255,255,.25);
}

.masthead-nav > .active > a,
.masthead-nav > .active > a:hover,
.masthead-nav > .active > a:focus {
    color: #fff;
    border-bottom-color: #fff;
}

@media (min-width: 768px) {
    .masthead-brand {
        float: left;
    }

    .masthead-nav {
        float: right;
    }
}

.form{
  margin-top: 150px;
}


/*
 * Cover
 */

.cover {
    padding: 0 20px;
}

.cover .btn-lg {
    padding: 10px 20px;
    font-weight: bold;
}


/*
 * Footer
 */

.mastfoot {
    color: #fff;
 /* IE8 proofing */
    color: rgba(255,255,255,.5);
}


/*
 * Affix and center
 */

@media (min-width: 768px) {
  /* Pull out the header and footer */
    .masthead {
        position: fixed;
        top: 0;
    }

    .mastfoot {
        position: fixed;
        bottom: 0;
    }
  /* Start the vertical centering */
    .site-wrapper-inner {
        vertical-align: middle;
    }
  /* Handle the widths */
    .masthead,
  .mastfoot,
  .cover-container {
        width: 100%;
 /* Must be percentage or pixels for horizontal alignment */
    }
}

@media (min-width: 992px) {
    .masthead,
  .mastfoot,
  .cover-container {
        width: 700px;
    }
}


